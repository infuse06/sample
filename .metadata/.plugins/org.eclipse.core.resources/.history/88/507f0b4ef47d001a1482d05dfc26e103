	<select id="selectBbs" resultType="bbsVO" parameterType="bbsVO">
   		SELECT
			*
		FROM 
			board2
		WHERE
			bno = #{bno}
	</select>
	
	<!-- 글등록 -->
	<insert id="insertBbs" parameterType="bbsVO">
		INSERT INTO board2(bno, title, content, wdate, id) 
		VALUES (seq_board2_bno.nextval, #{title}, #{content}, sysdate, #{id});
	</insert>
	
